<%- include ("partials/header")%>


<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title%>></div>
    <form class = "ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="post">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title%>">
        </div>

        <div class="field">
            <label for="blog[image]">Image</label>
            <input type="text" name="blog[image]" placeholder="image" value="<%= blog.image%>">
        </div>

        <div class="field">
            <label for="blog[body]">Blog Content</label>
            <textarea name="blog[body]"  ><%= blog.body%></textarea>
        </div>

        <button class="ui  very basic teal button">Submit</button>


    </form>
</div>




<%- include ("partials/footer")%>


